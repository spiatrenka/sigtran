{% extends 'VgksSigtranBundle::layout.html.twig' %}

{% block content %}
    <div>
        <h2>Тест</h2>
        <form action="{{ path('vgks_sigtran_test_check') }}" method="post">
            {% for question in questions %}
                <div class="form-group">
                    <p>{{ loop.index }}. {{ question.text }}</p>
                </div>
                {% for answer in question.answers %}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="answers[]" value="{{ answer.id }}"> {{ answer.text }}
                        </label>
                    </div>
                {% endfor %}
            {% endfor %}

            <button type="submit" class="btn btn-default">Отправить</button>
        </form>
    </div>
{% endblock %}