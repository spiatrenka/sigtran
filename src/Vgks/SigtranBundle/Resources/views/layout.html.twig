{% extends '::base.html.twig' %}

{% block title %}
    Структура сообщений протокола Sigtran. Сценарии передачи сообщений
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/vgkssigtran/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/vgkssigtran/singtran/singtran.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Sigtran</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('vgks_sigtran_homepage') }}">Главная</a></li>
                    {% render(controller("VgksSigtranBundle:Material:menu")) %}
                    <li><a href="{{ path('vgks_sigtran_test_show') }}">Пройти тест</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('vgks_sigtran_material_all') }}">Все материалы</a></li>
                    <li><a href="{{ path('vgks_sigtran_question_all') }}">Все вопросы</a></li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <!-- Begin page content -->
    <div class="container">
        {% block content %}
            <div class="page-header">
                <h1>Sticky footer with fixed navbar</h1>
            </div>
            <p class="lead">Pin a fixed-height footer to the bottom of the viewport in desktop browsers with this custom HTML and CSS. A fixed navbar has been added with <code>padding-top: 60px;</code> on the <code>body > .container</code>.</p>
            <p>Back to <a href="../sticky-footer">the default sticky footer</a> minus the navbar.</p>
        {% endblock %}
    </div>


    <footer class="footer">
        <div class="container">
            <p class="text-muted"></p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/vgkssigtran/jquery/jquery-1.11.3.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/vgkssigtran/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
{% endblock %}